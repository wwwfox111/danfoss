@model Solution
@{
    Layout = null;
    var url = Request.Url.ToString();
    var configData = Danfoss.Core.We.WeHelper.GetWxConfigObject(url);    
    ViewBag.appId = configData.appId;
    ViewBag.nonceStr = configData.nonceStr;
    ViewBag.signature = configData.signature;
    ViewBag.timestamp = configData.timestamp;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta id="viewport" name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1; user-scalable=no; viewport-fit=cover">
    <title>丹佛斯资料下载</title>
    <link rel="stylesheet" type="text/css" href="~/content/css/hui.css" />
    <link rel="stylesheet" href="~/content/css/main.css">
    <script src="~/content/js/flexible.min.js"></script>
    <script type="text/javascript" src="http://res.wx.qq.com/open/js/jweixin-1.0.0.js" charset="utf-8"></script>
    <script type="text/javascript">

		//JS-SDK初始化配置
		wx.config({
			debug: false,
			appId: "@ViewBag.appId",
			timestamp: "@ViewBag.timestamp",
			nonceStr: "@ViewBag.nonceStr",
			signature: "@ViewBag.signature",
			jsApiList: [
				'onMenuShareTimeline'

			]
        });
        wx.ready(function () {
            		// 1 判断当前版本是否支持指定 JS 接口，支持批量判断
			wx.checkJsApi({
				jsApiList: [
				  'onMenuShareTimeline'
				],
				success: function (res) {
					//alert(JSON.stringify(res));
				}
			});

			var url = "@Danfoss.Core.Constants.SiteDomain" + "@Url.Action("Detail", "Home",new { id = ViewBag.Id })";
			var Imgurl = '@Danfoss.Core.Constants.SiteDomain' + '@Url.Content("/Content/images/logo.jpg")';
            var shareTitle = "丹佛斯资料下载";
            var shareDesc = "丹佛斯各应用解决方案资料，小伙伴们快来下载吧~";
            //分享到朋友圈接口
            wx.onMenuShareTimeline({
                title: shareTitle, // 分享标题
                link: url, // 分享链接
                imgUrl: Imgurl, // 分享图标
                trigger: function () {
                    //alert("触发点击分享到朋友圈");
                },
                success: function () {
                    // 用户确认分享后执行的回调函数
                },
                cancel: function () {
                    // 用户取消分享后执行的回调函数
                }
            });

        })

    </script>
</head>

<body>
    <div class="container">
        <header class="header">
            <div class="btn-left"></div>
            <a href="/" class="btn-right-home"></a>
            <div class="dropdown">
                <a href="/" class="dropdown-item">
                    <i class="icon back"></i>查看全部应用
                </a>
                <a href="/download" class="dropdown-item">
                    <i class="icon download"></i>下载全部资料
                </a>
            </div>
        </header>
        <div class="hui-wrap">
            <div class="banner">
                <img src="@Url.Img(Model.BigPicUrl)" alt="">
            </div>
            <div class="hui-media-list">
                <ul>
                    @foreach (var item in Model.Products)
                    {
                        <li>
                            <div class="hui-media-list-img">
                                @if (!string.IsNullOrEmpty(item.SmallPicUrl))
                                {
                                    <img src="@Url.Img(item.SmallPicUrl,"solution")" />
                                }
                            </div>
                            <div class="hui-media-content">
                                <h1>@item.Title</h1>
                                <p>@item.SubTitle</p>
                            </div>
                            <div class="hui-media-right hui-form-radios">
                                <a href="@Url.Download(item.FileUrl)" target="_blank" class="button button-red">预览</a>
                                <input type="checkbox" value="@item.Id" name="c1" id="c@(item.Id)" data-title="@item.Title" data-url="@Url.Download(item.FileUrl)" /><label for="c@(item.Id)"></label>
                            </div>
                        </li>
                    }
                </ul>
            </div>
            <div class="detail-button">
                <button type="button" id="downloadbtn" class="hui-button button-red">发送至邮箱下载</button>
            </div>
        </div>
    </div>
    <script src="~/content/js/hui.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/content/js/hui-form.js"></script>
    <script type="text/javascript" charset="UTF-8" src="~/content/js/common.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
        var isSend = true;
        hui('#downloadbtn').click(function () {
            var checked = $(".hui-media-list input[name=c1]:checked");
            if (checked.length == 0) {
                hui.toast('请勾选需要下载的资料', 2000);
                return false;
            }
            hui.prompt('请填写您的邮箱<br/>文件将发送至您的邮箱', ['取消', '确定'], function (val) {
                console.log('您输入了 :' + val);
                if (val == "") {
                    hui.toast('请输入您的邮箱', 2000);
                    return false;
                }
                var reg = /^([a-zA-Z0-9_-])+@@([a-zA-Z0-9_-])+(.[a-zA-Z0-9_-])+/;
                if (!reg.test(val)) {
                    hui.toast('邮箱格式不正确', 2000);
                    return false;
                }
                var ckb_value = [];
                checked.each(function () {
                    ckb_value.push({ Title: $(this).data("title"), FileUrl: $(this).data("url") });
                });
                var solutions = [];
                var solution = {};
                solution.Title = "@Model.Title";
                solution.Products = ckb_value;
                solutions.push(solution);
                //关闭输入弹框
                hui.dialogClose();
                if (isSend) {
                    $.ajax({
                        url: "@Url.Action("SendEmail")",
                        type: "post",
                        data: { emailAddress: val, solutions: solutions },
                        dataType: "json",
                        beforeSend: function () {
                            isSend = false;
                            hui.loading("邮件发送中...");
                        },
                        success: function (data) {
                            if (data.IsSuccess) {
                                utils.msg('发送成功', '邮件已发送至您的邮箱<br/>请注意查收', '关闭', function () {
                                    console.log('关闭了提示框')
                                })
                                
                            } else {
                                hui.toast('邮件发送失败，请重试', 2000);
                                //重新打开输入弹框
                                hui.dialogOpen();
                            }
                        },
                        complete: function () {
                            isSend = true;
                            hui.closeLoading();
                        }
                    });
                }
            }, '例如 : 123456@qq.com', '', function () {
                console.log('您点击了取消')
            });
        });

        //hui('.btnPreview').click(function () {
        //    location.href = $(this).data("url");
        //});
    </script>
</body>

</html>