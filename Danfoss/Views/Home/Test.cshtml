@section scripts{
    <script type="http://res.wx.qq.com/open/js/jweixin-1.2.0.js">
    </script>
    <script type="text/javascript">
        $(function () {
            $("#btnSubmit").click(function () {
                if ($("#txtEmail").val() == "") {
                    return;
                }
                $.ajax({
                    url: "@Url.Action("SendEmail")",
                    type: "post",
                    data: { emailAddress: $("#txtEmail").val(), content: $("#txtContent").val()},
                    success: function (data) {

                    }
                })
            });
            //导出
            $("#btnExport").click(function () {
                window.open("@Url.Action("ExportUserInfo")");
            })
            // 导出发送邮件
            $("#btnExportSendLog").click(function () {
                window.open("@Url.Action("ExportSendEmailLog")");
            });
            //导出分享统计 
            $("#btnExportSharesLog").click(function () {
                window.open("@Url.Action("ExportSharesLog")");
            })
        })
    </script>
}