
@{
    ViewBag.Title = "Test";
}

<div>
    <label>邮箱地址：</label>
    <input type="text" id="txtEmail" />
    <label>发送内容：</label>
    <textarea id="txtContent"></textarea>

    <input type="button" value="提交" id="btnSubmit" />
    <input type="button" value="导出" id="btnExport" />
</div>   

<a href="weixin://contacts/profile/gh_34bd692a9835">点击关注我吧</a>
@section scripts{
    <script type="http://res.wx.qq.com/open/js/jweixin-1.2.0.js">
    </script>
    <script type="text/javascript">
        $(function () {
            $("#btnSubmit").click(function () {
                if ($("#txtEmail").val() == "") {
                    return;
                }
                $.ajax({
                    url: "@Url.Action("SendEmail")",
                    type: "post",
                    data: { emailAddress: $("#txtEmail").val(), content: $("#txtContent").val()},
                    success: function (data) {

                    }
                })
            });
            //导出
            $("#btnExport").click(function () {
                window.open("@Url.Action("ExportUserInfo")");
            })
        })
    </script>
}